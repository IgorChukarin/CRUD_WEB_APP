<html>
<head>
</head>
<style>

tr:first-child th:first-child { border-top-left-radius: 5px; }
tr:first-child th:last-child { border-top-right-radius: 5px; }

tr:last-child td:first-child { border-bottom-left-radius: 5px; }
tr:last-child td:last-child { border-bottom-right-radius: 5px; }

p {
 color: green;
 font-family: 'Courier New', monospace;
 font-weight: 700;
 padding: 0px;
 margin: 0px;
}

::-webkit-scrollbar {
  width: 5px;
}

::-webkit-scrollbar-track {
  background: #1b1a19;
}

::-webkit-scrollbar-thumb {
  background: #353231;
    border-radius: 10px;
}

::-webkit-scrollbar-thumb:hover {
  background: #555;
}

.split {
  height: 100%;
  width: 50%;
  position: fixed;
  z-index: 1;
  top: 0;
  overflow-x: hidden;
  padding-top: 0px;
}

.left {
  left: 0;
  background-color: #1b1a19;
}


.right {
  right: 0;
  background-color: #1b1a19;
}

tr:nth-child(even) {
  background-color: #f2f2f2;
}

table {
  border-collapse: collapse;
  width: 90%;
  margin-left: auto;
  margin-right: auto;
}

th, td {
  text-align: left;
  padding: 8px;
  font-family: Arial;
}

th {
 color: #1b1a19;
}

.centered {
  position: absolute;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  border-radius: 8px;
}

select {
 width: 170px;
}

h1 {
 padding: 0px;
 margin: 4px 20px 20px 4;
 font-size: 150%;
 font-family: Arial;
 font-weight: 700;
}



* {
  box-sizing: border-box;
}

input[type=text], select, textarea {
  width: 100%;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 4px;
  resize: vertical;
  font-size: 80%;
}

input[type=number] {
  width: 100%;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 4px;
  resize: vertical;
  font-size: 80%
}

label {
  padding: 12px 12px 12px 25px;
  display: inline-block;
  font-family: Arial;
}

input[type=submit] {
  background-color: #04AA6D;
  color: white;
  padding: 8px 16px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  float: right;
}

input[type=submit]:hover {
  background-color: #45a049;
}

.container {
  border-radius: 5px;
  background-color: #f2f2f2;
  padding: 10px;
  padding-bottom: 1;
  margin: 32px;
}

.col-25 {
  float: left;
  width: 25%;
  margin-top: 6px;
}

.col-75 {
  float: left;
  width: 75%;
  margin-top: 6px;
}

/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}

/* Responsive layout - when the screen is less than 600px wide, make the two columns stack on top of each other instead of next to each other */
@media screen and (max-width: 600px) {
  .col-25, .col-75, input[type=submit] {
    width: 100%;
    margin-top: 0;
  }
}

</style>
<br>
<body>


    <div class="split left">
        <div style="line-height: 20px; font-family: Arial; font-size: 190%; font-weight: 1000; color: #fac670; padding: 22px;">
            chukarin
        </div>


        <div class="container">
            <form method="post" action="add">
                <h1>Add</h1>

                <div class="row">
                    <div class="col-25">
                        <label for="gname">Name</label>
                    </div>
                    <div class="col-75">
                        <input type="text" id="gname" name="name" placeholder="Enter Name"/>
                    </div>
                </div>

                <div class="row">
                    <div class="col-25">
                        <label for="gcategory">Category</label>
                    </div>
                    <div class="col-75">
                        <select id="gcategory" name="categoryId">
                            <option value="1">Outerwear</option>
                            <option value="2">Jackets</option>
                            <option value="3">Trousers</option>
                            <option value="4">Jeans</option>
                            <option value="5">Shoes</option>
                            <option value="6">Sneakers</option>
                            <option value="7">Sweatpants</option>
                            <option value="8">Shorts</option>
                            <option value="9">Shirts</option>
                            <option value="10">Hats</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-25">
                        <label for="gsize">Size</label>
                    </div>
                    <div class="col-75">
                        <select id="gsize" name="size" >
                            <optgroup label="Clothes">
                                <option value="S">S</option>
                                <option value="M">M</option>
                                <option value="L">L</option>
                                <option value="XL">XL</option>
                            </optgroup>
                            <optgroup label="Shoes">
                                <option value="38">38</option>
                                <option value="38">39</option>
                                <option value="38">40</option>
                                <option value="38">41</option>
                            </optgroup>
                            <optgroup label="Hats">
                                <option value="one_size">One Size</option>
                            </optgroup>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-25">
                        <label for="gamount">Amount</label>
                    </div>
                    <div class="col-75">
                        <input id="gamount" type="text" name="count" placeholder="Enter Amount"/>
                    </div>
                </div>

                <div class="row">
                    <div class="col-25">
                        <label for="gprice">Price</label>
                    </div>
                    <div class="col-75">
                        <input id="gprice" type="text" name="price" placeholder=" Enter Price"/>
                    </div>
                </div>

                <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>

                <div class="row">
                    <input type="submit" value="Submit"/>
                </div>
            </form>
        </div>


        <div class="container">
            <form method="post" action="filter">
                <h1>Find</h1>

                <div class="row">
                    <div class="col-25">
                        <label for="gfrom">From</label>
                    </div>
                    <div class="col-75">
                        <input id="gfrom" type="number" name="priceFrom" placeholder="From"/>
                    </div>
                </div>

                <div class="row">
                    <div class="col-25">
                        <label for="gto">To</label>
                    </div>
                    <div class="col-75">
                        <input id="gto" type="number" name="priceTo" placeholder="To"/>
                    </div>
                </div>

                <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>

                <div class="row">
                    <input type="submit" value="Submit"></input>
                </div>
            </form>
        </div>


        <div class="container">
            <form method="post" action="update">
                <h1>Update</h1>

                <div class="row">
                    <div class="col-25">
                        <label for="gid">ID</label>
                    </div>
                    <div class="col-75">
                        <input id="gid" type="number" name="id" placeholder="Enter ID"/>
                    </div>
                </div>

                <div class="row">
                    <div class="col-25">
                        <label for="gnewname">New Name</label>
                    </div>
                    <div class="col-75">
                        <input id="gnewname" type="text" name="name" placeholder="Enter New Name"/>
                    </div>
                </div>

                <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>

                <div class="row">
                    <input type="submit" value="Submit"/>
                </div>
            </form>
        </div>


        <div class="container">
            <form method="post" action="delete">
                <h1>Delete</h1>

                <div class="row">
                    <div class="col-25">
                        <label for="did">ID</label>
                    </div>
                    <div class="col-75">
                        <input id="did" type="number" name="id" placeholder="Enter ID"/>
                    </div>
                </div>

                <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>

                <div class="row">
                    <input type="submit" value="Submit"/>
                </div>
            </form>
        </div>
    </div>


    <div class="split right">
        <form action="/logout" method="post">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            <input type="submit" value="Sign Out" style="background-color: #1b1a19;color: #5d5a56; margin-top: 10px"/>
        </form>
        <br>

        <div class="container" style="background-color: black; width: 90%; padding: 10px; margin: 30px" >
            <p>~{{message}}</p>
        </div>

        <table>
            <tr bgcolor="fac670">
                <th>id</th>
                <th>Name</th>
                <th>Category</th>
                <th>Amount</th>
                <th>Price</th>
                <th>Size</th>
            </tr>
            {{#goods}}
            <tr bgcolor="ffffff">
                <td><span>{{id}}</span></td>
                <td><span>{{name}}</span></td>
                <td><span>{{categoryId}}</span></td>
                <td><span>{{count}}</span></td>
                <td><span>{{price}}</span></td>
                <td><span>{{size}}</span></td>
            </tr>
            {{/goods}}
        </table>
    </div>
</body>
</html>