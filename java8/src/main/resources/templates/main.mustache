<html>
<head>
</head>
<style>

.split {
  height: 100%;
  width: 50%;
  position: fixed;
  z-index: 1;
  top: 0;
  overflow-x: hidden;
  padding-top: 0px;
}

.left {
  left: 0;
  background-color: #1b1a19;
}

/* Control the right side */
  .right {
  right: 0;
  background-color: #1b1a19;
}

tr:nth-child(even) {
  background-color: #f2f2f2;
}

table {
  border-collapse: collapse;
  width: 100%;
}

th, td {
  text-align: left;
  padding: 8px;
}

.centered {
  position: absolute;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

button {
  color: #fac670;
  border: 2px solid #fac670;
  background-color: #1b1a19;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  cursor: pointer;
  border-radius: 8px;
}
</style>
<br>
<body>
    <div class="split left">
        <div style="line-height: 20px; font-family: Arial; font-size: 190%; font-weight: 1000; color: #fac670; padding: 22px;">
            chukarin
        </div>
        <form method="post" action="add" style="padding: 22px;">
            <input type="text" name="name" placeholder="Name"/>
            <br>
            <select name="categoryId">
                <option value="1">Outerwear</option>
                <option value="2">Jackets</option>
                <option value="3">Trousers</option>
                <option value="4">Jeans</option>
                <option value="5">Shoes</option>
                <option value="6">Sneakers</option>
                <option value="7">Sweatpants</option>
                <option value="8">Shorts</option>
                <option value="9">Shirts</option>
                <option value="10">Hats</option>
            </select>
            <br>
            <select name="size">
                <optgroup label="Clothes">
                    <option value="S">S</option>
                    <option value="M">M</option>
                    <option value="L">L</option>
                    <option value="XL">XL</option>
                </optgroup>
                <optgroup label="Shoes">
                    <option value="38">38</option>
                    <option value="38">39</option>
                    <option value="38">40</option>
                    <option value="38">41</option>
                </optgroup>
                <optgroup label="Hats">
                    <option value="one_size">One Size</option>
                </optgroup>
            </select>
            <br>
            <input type="text" name="count" placeholder="Amount"/>
            <br>
            <input type="text" name="price" placeholder="Price"/>
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            <button type="submit">Submit</button>
        </form>
        <form method="post" action="filter" style="padding: 22px;">
            <input type="number" name="from" placeholder="From"/>
            <br>
            <input type="number" name="to" placeholder="To"/>
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            <button type="submit">Submit</button>
        </form>
        <form method="post" action="update" style="padding: 22px;">
            <input type="number" name="id" placeholder="id"/>
            <br>
            <input type="text" name="name" placeholder="New name"/>
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            <button type="submit">Submit</button>
        </form>
        <form method="post" action="delete" style="padding: 22px;">
            <input type="number" name="id" placeholder="id"/>
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            <button type="submit">Submit</button>
        </form>
        <p class="centered" style="background-color: green">{{message}}</p>
    </div>
    <div class="split right">
        <table>
            <tr bgcolor="fac670">
                <th>id</th>
                <th>Name</th>
                <th>Category</th>
                <th>Amount</th>
                <th>Price</th>
                <th>Size</th>
            </tr>
            {{#goods}}
            <tr bgcolor="ffffff">
                <td><span>{{id}}</span></td>
                <td><span>{{name}}</span></td>
                <td><span>{{categoryId}}</span></td>
                <td><span>{{count}}</span></td>
                <td><span>{{price}}</span></td>
                <td><span>{{size}}</span></td>
            </tr>
            {{/goods}}
        </table>
    </div>
    <span><br></span>
    <div>
        <form action="/logout" method="post">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
            <input type="submit" value="Sign Out" style="background-color:#F76588;border-color:F76588"/>
        </form>
    </div>
</body>
</html>